{
  "compilerOptions": {
    "target":  "es6",
    "module":  "commonjs",
    "rootDir": "./",
    "outDir":  "./dist/",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
